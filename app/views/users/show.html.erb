<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>


<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Password:</strong>
  <%= @user.password %>
</p>

<p>
  <strong>Coins:</strong>
  <%= @user.coins %>
</p>

<p>
  <strong>Chechin number:</strong>
  <%= @user.chechin_number %>
</p>

<p>
  <strong>Challenge number:</strong>
  <%= @user.challenge_number %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>

<% if !@user.challenges.empty? %>
  <h3 class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
      Active Challenges<b class="caret"></b>
    </a>
    <ul class="dropdown-menu">
      <% @user.challenges.all.each do |challenge| %>
        <li><%= link_to challenge.name, challenge %></li>
      <% end %>
    </ul>
  </h3>
<% end %>
<%= render 'shared/add_btn'%>
